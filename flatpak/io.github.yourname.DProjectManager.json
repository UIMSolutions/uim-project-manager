{
    "app-id": "io.github.yourname.UIMProjectManager",
    "runtime": "org.gnome.Platform",
    "runtime-version": "46",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.ldc"
    ],
    "command": "uim-project-manager",
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=xdg-documents",
        "--filesystem=xdg-cache/dub:create"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/ldc/bin",
        "env": {
            "DC": "ldc2",
            "DUB_HOME": "/run/build/uim-project-manager/dub-cache"
        }
    },
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/share/man",
        "*.a",
        "*.la"
    ],
    "modules": [
        {
            "name": "uim-project-manager",
            "buildsystem": "simple",
            "builddir": true,
            "build-commands": [
                "mkdir -p dub-cache",
                "dub build --build=release --compiler=ldc2 --cache=local --skip-registry=all --parallel",
                "install -Dm755 uim-project-manager /app/bin/uim-project-manager",
                "install -Dm644 io.github.yourname.UIMProjectManager.desktop /app/share/applications/io.github.yourname.UIMProjectManager.desktop",
                "install -Dm644 io.github.yourname.UIMProjectManager.metainfo.xml /app/share/metainfo/io.github.yourname.UIMProjectManager.metainfo.xml",
                "install -Dm644 icons/icon.svg /app/share/icons/hicolor/scalable/apps/io.github.yourname.UIMProjectManager.svg"
            ],
            "sources": [
                {
                    "type": "dir",
                    "path": ".."
                }
            ]
        }
    ]
}
